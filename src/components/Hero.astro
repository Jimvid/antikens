---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

interface Props {
    image: ImageMetadata
    alt: string
    title: string
}

const { image, alt, title } = Astro.props
---

<div class="hero py-8 md:my-24">
    <div
        class="hero-content max-w-[1080px] px-4 md:px-8 pb-0 flex-col lg:flex-row-reverse gap-8"
    >
        <div class="blue-backdrop shadow-2xl col-start-2 col-end-2">
            <Image
                src={image}
                alt={alt}
                loading="eager"
                class="border-primary blue-backdrop rounded-lg md:max-w-[580px] lg:max-w-lg shadow-2xl"
            />
        </div>
        <div class="max-w-xl">
            <h1 class="text-4xl md:text-5xl font-bold">
                {title}
            </h1>
            <slot />
        </div>
    </div>
</div>

<style>
    .blue-backdrop {
        position: relative;

        &::after {
            border-radius: 8px;
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: -1;
            transform: translate(0.5rem, 0.5rem);
            @apply bg-primary;
        }
    }
</style>
