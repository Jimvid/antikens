---
interface Props {
    title: string
    score: number
    worst: string
    best: string
}

const { title, score, worst, best } = Astro.props
---

<div class="flex gap-4 md:gap-16 flex-col md:flex-row">
    <div class="flex-1">
        <h3 class="text-2xl font-semibold mb-2">{title}</h3>
        <div>
            <slot />
        </div>
    </div>
    <div class="flex-1">
        <div
            class="flex pt-10 w-full justify-between mb-2 text-xs text-gray-400"
        >
            <p>{worst}</p><p>{best}</p>
        </div>
        <div class="flex w-full gap-2">
            {
                Array.from(Array(5).keys()).map((i) => (
                    <span
                        class={`h-3 flex-1 rounded-md bg-primary ${i + 1 <= score ? 'opacity-100' : 'opacity-40'}`}
                    />
                ))
            }
        </div>
    </div>
</div>
